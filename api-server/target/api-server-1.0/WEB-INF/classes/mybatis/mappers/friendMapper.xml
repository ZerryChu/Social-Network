	<!-- 收听的人 -->
	<select id="selectFriendsByGroupname" parameterType="string"
		resultType="string">
		SELECT
		nickname
		FROM
		user_inf
		WHERE
		id IN (
		SELECT
		friend_id
		FROM
		friend,
		user_inf
		WHERE
		username = #{0}
		AND user_id = id
		AND groupname =
		#{1}
		)
	</select>

	<select id="selectFollowers" parameterType="string" resultType="Target">
		SELECT
		username,
		nickname,
		friend_num
		FROM
		user_inf
		WHERE
		id IN (
		SELECT
		user_id
		FROM
		friend,
		user_inf
		WHERE
		username = #{0}
		AND friend_id = id
		)
	</select>

	<select id="selectFavorites" parameterType="string" resultType="Target">
		SELECT
		username,
		nickname,
		friend_num
		FROM
		user_inf
		WHERE
		id IN (
		SELECT
		friend_id
		FROM
		friend,
		user_inf
		WHERE
		username =
		#{0}
		AND user_id = id
		)
	</select>

	<select id="selectGroupsByUsername" parameterType="string"
		resultType="string">
		SELECT DISTINCT
		groupname
		FROM
		friend,
		user_inf
		WHERE
		username =
		#{0}
		AND user_id = id
	</select>

	<select id="judgeIfFriendsOrNot" resultType="Count">
		SELECT
		COUNT(*) as
		number
		FROM
		friend
		WHERE
		user_id = #{0}
		AND friend_id = #{1}
	</select>
</mapper>